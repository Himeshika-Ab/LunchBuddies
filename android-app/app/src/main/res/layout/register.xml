<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginRight="-329dp"
        android:background="#F95B31"
        android:fontFamily="casual"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="559dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/namelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/header"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-44dp"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/namelbl"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="-46dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />


    <TextView
        android:id="@+id/emaillbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/namelbl"
        android:layout_marginLeft="175dp"
        android:layout_marginBottom="-78dp"
        android:fontFamily="sans-serif"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/email"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/emaillbl"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="-85dp"
        android:layout_marginBottom="-170dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/contactNolbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/emaillbl"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="-77dp"
        android:fontFamily="sans-serif"
        android:text="Contact No"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/contactNo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/emaillbl"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="-86dp"
        android:layout_marginBottom="-248dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/passwordlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/contactNo"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="-32dp"
        android:fontFamily="sans-serif"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/passwordlbl"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="-63dp"
        android:layout_marginBottom="-321dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />


    <TextView
        android:id="@+id/confirmpwlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="-29dp"
        android:fontFamily="sans-serif"
        android:text="Confirm Password"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/confirmpw"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/confirmpwlbl"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="-21dp"
        android:layout_marginBottom="-393dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#F95B31"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/confirmpw"
        android:layout_marginBottom="-71dp"
        android:layout_marginLeft="135dp"
        android:background="#F95B31"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="Register" />




</RelativeLayout>