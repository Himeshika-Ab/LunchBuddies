<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        />

    <ImageView
        android:id="@+id/wallpaper2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"

        android:background="#ffb71c1c" />


    <EditText
        android:id="@+id/userprofilename"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="-90dp"
        android:layout_marginTop="130dp"
        android:drawableLeft="@drawable/name_24dp"
        android:fontFamily="sans-serif"
        android:hint="   Name"
        android:textAlignment="center"
        android:textColor="#fceae5"
        android:textColorHint="#fceae5"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="sans" />


    <EditText
        android:id="@+id/userprofileemail"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userprofilename"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="-73dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_email_24dp"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#fceae5"
        android:textAlignment="center"
        android:textColor="#fceae5"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/userprofilecontactNo"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/userprofileemail"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="-73dp"
        android:layout_centerHorizontal="true"

        android:hint="   ContactNo"
        android:textColorHint="#fceae5"
        android:textAlignment="center"
        android:textColor="#fceae5"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <Button
        android:id="@+id/userprofilesave"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="226dp"
        android:layout_height="62dp"
        android:layout_alignBottom="@+id/userprofilecontactNo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-143dp"
        android:background="@drawable/button_rounded_corners2"
        android:fontFamily="sans-serif"
        android:text="Save Changes"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#ffb71c1c"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"

        />

    <Button
        android:id="@+id/userprofileremoveaccount"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="226dp"
        android:layout_height="61dp"
        android:layout_alignRight="@id/userprofilesave"
        android:layout_alignBottom="@+id/userprofilecontactNo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-221dp"
        android:background="@drawable/button_rounded_corners2"
        android:fontFamily="sans-serif"
        android:text="Remove Account"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#ffb71c1c"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"

        />


</RelativeLayout>