<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >


    <ImageView
        android:id="@+id/wallpaper"
        android:layout_width="500dp"
        android:layout_height="1000dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/donuts" />


    <EditText
        android:id="@+id/loginemail"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-85dp"
        android:background="#ffb71c1c"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#fceae5"
        android:textColorHint="#fceae5"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/loginemail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="-100dp"
        android:background="#ffb71c1c"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="12"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#fceae5"
        android:textColorHint="#fceae5"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <Button
        android:id="@+id/Loginbutton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="-100dp"
        android:background="#ffb71c1c"
        android:drawableLeft="@drawable/ic_touch_app_black_24dp"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#fceae5"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/loginregisterbutton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="-200dp"
        android:background="#ffb71c1c"
        android:drawableLeft="@drawable/ic_add_black_24dp"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:text="Create Account"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#fceae5"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>
